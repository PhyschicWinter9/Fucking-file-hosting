# cPanel Shared Hosting Environment Configuration
# Copy this to .env and adjust values for your hosting environment

APP_NAME="Fast File Hosting"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://yourdomain.com

# Database Configuration (adjust for your cPanel MySQL settings)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# Shared Hosting Optimizations
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Session Configuration (file-based for shared hosting)
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache Configuration (file-based for shared hosting)
CACHE_STORE=file
CACHE_PREFIX=ffh_

# Queue Configuration (sync for shared hosting - no Redis/SQS)
QUEUE_CONNECTION=sync

# File Storage Configuration
FILESYSTEM_DISK=local
FILE_STORAGE_PATH=storage/app/files
FILE_MAX_SIZE=10737418240
FILE_CLEANUP_ENABLED=true
FILE_DEFAULT_EXPIRY_DAYS=30

# Privacy Settings
PRIVACY_MODE=strict
LOG_IP_ADDRESSES=false
ANALYTICS_ENABLED=false
TRACKING_ENABLED=false

# Performance Settings
UPLOAD_CHUNK_SIZE=10485760
MEMORY_LIMIT=512M
EXECUTION_TIME_LIMIT=600

# Security Settings
SECURE_HEADERS=true
FORCE_HTTPS=true
CSRF_PROTECTION=true

# Mail Configuration (adjust for your hosting provider)
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Logging Configuration
LOG_CHANNEL=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Vite Configuration (for production builds)
VITE_APP_NAME="${APP_NAME}"